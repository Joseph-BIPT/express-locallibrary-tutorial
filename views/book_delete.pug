extends layout

block content

    h1 #{title}: #{book.title}

    if book_instances.length
        p #[strong First you must delete existing book instances.]

        div(style='margin-left:20px; margin-top:20px')

            h4 Book instances

            dl
            each book_inst in book_instances
                dt
                    a(href=book_inst.url) #{book_inst.book}
                dd
                    #{book_inst.imprint}

    else

        p Do you really want to delete this book?

        form(method='POST' action='')
            div.form-group
                input#bookname.form-control(type='hidden' name='book_name' required='true' value=book.id)

            button.btn.btn-primary(type='submit') Delete



